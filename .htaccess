RewriteEngine On

# 1. Rediriger les liens physiques (.php) vers l'URL sans extension
# Exemple : /contact.php -> /contact
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# 2. Mapper l'URL sans extension vers le fichier réel en interne
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*?)$ $1.php [L]

# 3. Même logique pour le HTML (si tu as des fichiers .html)
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC]
RewriteRule ^ %1 [R=301,L]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*?)$ $1.html [L]